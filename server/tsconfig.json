{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["esnext.asynciterable", "es2017", "es2018"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"target": "esnext",
		"allowJs": false,
		"outDir": "dist"
	},
	"include": ["pem/*.pem", "src/**/*.ts", "lib/**/*.ts", "bin/**/*.ts", "test/**/*.ts"],
	"exclude": ["node_modules"],
	"compileOnSave": false
}
